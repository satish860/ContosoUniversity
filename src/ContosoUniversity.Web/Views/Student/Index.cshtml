@model ContosoUniversity.Domain.Students.StudentListViewModel

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Enrollment Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.StudentList)
        {
            <tr>
                <td>@student.StudentId</td>
            
                <td>@student.FirstName</td>
            
                <td>@student.LastName</td>
            
                <td>@student.EnrollmentDate</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = student.StudentId })
                    @Html.ActionLink("Delete", "Delete", new { id = student.StudentId })
                    @Html.ActionLink("Details", "Details", new { id = student.StudentId })
                </td>
            </tr>
        }
    </tbody>
</table>

